{
  "app": {
    "bundleName": "com.thanosfisherman.mayi",
    "vendor": "thanosfisherman",
    "version": {
      "code": 1000000,
      "name": "1.0.0"
    },
    "apiVersion": {
      "compatible": 4,
      "target": 5,
      "releaseType": "Release"
    }
  },
  "deviceConfig": {},
  "module": {
    "package": "com.thanosfisherman.mayi",
    "name": ".MyApplication",
    "deviceType": [
      "phone"
    ],
    "distro": {
      "deliveryWithInstall": true,
      "moduleName": "entry",
      "moduleType": "entry"
    },
    "abilities": [
      {
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "action.system.home"
            ]
          }
        ],
        "orientation": "unspecified",
        "name": "com.thanosfisherman.mayi.MainAbility",
        "icon": "$media:icon",
        "description": "$string:mainability_description",
        "label": "$string:app_name",
        "type": "page",
        "launchType": "standard"
      }
    ],
    "reqPermissions": [
      {
        "reason": "",
        "name": "ohos.permission.LOCATION",
        "usedScene" : {
          "ability" : ["com.thanosfisherman.mayi.MainAbility"],
          "when" : "always"
        }
      },
      {
        "reason": "",
        "name": "ohos.permission.MICROPHONE",
        "usedScene" : {
          "ability" : ["com.thanosfisherman.mayi.MainAbility"],
          "when" : "always"
        }
      }
    ]
  }
}